<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="viewModel"
            type="com.ramanbyte.emla.faculty.view_model.StudentAskedQuestionsViewModel" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorTransparent"
        app:cardCornerRadius="@dimen/dp_5"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/dp_5">

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.ramanbyte.views.RoundedImageView
                android:id="@+id/rivUserPic"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <!--app:imageUrl="@{replyModel.userPic}"
            app:placeholder="@{replyModel.setCharacterDrawable}"-->

            <TextView
                android:id="@+id/tvUserName"
                style="@style/TextViewRegularLightGray"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_10"
                android:text="{replyModel.userName}"
                android:textSize="@dimen/sp_12"
                app:layout_constraintEnd_toStartOf="@+id/tvDateTime"
                app:layout_constraintStart_toEndOf="@+id/rivUserPic"
                app:layout_constraintTop_toTopOf="@+id/rivUserPic" />

            <TextView
                android:id="@+id/tvDateTime"
                style="@style/TextViewRegularLightGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_10"
                android:text="{replyModel.userName}"
                android:textSize="@dimen/sp_12"
                app:layout_constraintEnd_toStartOf="@+id/ivDot"
                app:layout_constraintTop_toTopOf="@+id/rivUserPic" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivDot"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:background="@drawable/ic_is_live"
                android:layout_margin="@dimen/dp_5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvChapterName"
                style="@style/TextViewMediumBlackOnWhite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:text="{replyModel.answer}"
                android:textSize="@dimen/sp_12"
                app:layout_constraintEnd_toEndOf="@+id/ivDot"
                app:layout_constraintStart_toEndOf="@+id/rivUserPic"
                app:layout_constraintTop_toBottomOf="@+id/tvUserName" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMobile"
                style="@style/TextViewBoldLightGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_10"
                android:gravity="center"
                android:text="8600508651"
                android:drawableStart="@drawable/ic_call"
                app:layout_constraintStart_toStartOf="@+id/tvUserName"
                app:layout_constraintTop_toBottomOf="@+id/tvChapterName" />
            <!--android:text="@{replyModel.createdDateTime}"-->

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEmail"
                style="@style/TextViewBoldLightGray"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_10"
                android:gravity="left|center"
                android:layout_marginStart="@dimen/dp_5"
                android:text="niru.naware@gmail.com"
                android:drawableStart="@drawable/ic_mail"
                app:layout_constraintStart_toEndOf="@+id/tvMobile"
                app:layout_constraintEnd_toEndOf="@+id/ivDot"
                app:layout_constraintTop_toBottomOf="@+id/tvChapterName" />

            <TextView
                android:id="@+id/tvQuestion"
                style="@style/TextViewMediumBlackOnWhite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:text="{replyModel.answer}"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_5"
                app:layout_constraintEnd_toEndOf="@+id/ivDot"
                app:layout_constraintStart_toEndOf="@+id/rivUserPic"
                app:layout_constraintTop_toBottomOf="@+id/tvEmail" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>