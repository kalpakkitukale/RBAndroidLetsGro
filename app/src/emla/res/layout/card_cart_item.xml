<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="cartModel"
            type="com.ramanbyte.emla.models.response.CartResponseModel" />


        <variable
            name="viewModel"
            type="com.ramanbyte.emla.view_model.CartViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardContainer"
        style="@style/customCardWithoutElevation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgCourse"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_60"
                android:background="@drawable/ic_course_dummy"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_15"
                android:scaleType="fitXY"
                app:imageUrl="@{cartModel.courseImageUrl}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCourseName"
                style="@style/TextViewSubTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_12"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{cartModel.courseName}"
                app:layout_constraintStart_toEndOf="@+id/imgCourse"
                app:layout_constraintTop_toTopOf="@+id/imgCourse" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvAmount"
                style="@style/TextViewValueOfLabel"
                android:layout_marginTop="@dimen/dp_10"
                android:drawableStart="@drawable/ic_rupee_indian"
                android:text="@{cartModel.courseFee}"
                app:layout_constraintBottom_toBottomOf="@id/imgCourse"
                app:layout_constraintStart_toStartOf="@+id/tvCourseName" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/BorderButtonForDangerAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{()->viewModel.deleteCart(cardContainer, cartModel)}"
                android:drawableStart="@drawable/ic_delete_button"
                android:text="@string/strDelete"
                app:layout_constraintBottom_toBottomOf="@id/imgCourse"
                app:layout_constraintEnd_toEndOf="@+id/tvCourseName" />

            <View
                android:id="@+id/viewDivider"
                style="@style/baseDivider"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/dp_15"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgCourse" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>