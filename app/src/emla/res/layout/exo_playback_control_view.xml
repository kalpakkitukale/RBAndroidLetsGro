<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@color/exoTransparentBlack"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

     <ImageView
       android:id="@+id/doubleTapBackward"
       android:layout_width="0dp"
       android:layout_height="0dp"
       app:layout_constraintEnd_toStartOf="@+id/doubleTapForward"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       android:orientation="horizontal" />

    <ImageView
       android:id="@+id/doubleTapForward"
       android:layout_width="0dp"
       android:layout_height="0dp"
       android:orientation="horizontal"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toEndOf="@+id/doubleTapBackward"
       app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@id/exo_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@color/transparent"
        android:src="@drawable/ic_play1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@id/exo_pause"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:clickable="true"
        android:background="@color/transparent"
        android:src="@drawable/ic_pause_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/exo_play"
        app:layout_constraintEnd_toEndOf="@+id/exo_play"
        app:layout_constraintStart_toStartOf="@+id/exo_play"
        app:layout_constraintTop_toTopOf="@+id/exo_play" />


    <TextView
        android:id="@id/exo_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="@color/colorTransparent"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_16"
        app:layout_constraintBottom_toTopOf="@+id/barrier"
        app:layout_constraintEnd_toStartOf="@+id/exo_progress"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.exoplayer2.ui.DefaultTimeBar
        android:id="@id/exo_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:bar_height="1dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/exo_position"
        app:layout_constraintEnd_toStartOf="@+id/exo_duration"
        app:layout_constraintStart_toEndOf="@+id/exo_position"
        app:layout_constraintTop_toTopOf="@+id/exo_position"
        app:played_color="@color/colorTransparent" />

    <TextView
        android:id="@id/exo_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="@color/colorTransparent"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginEnd="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="@+id/exo_progress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/exo_progress"
        app:layout_constraintTop_toTopOf="@+id/exo_progress" />

    <View
        android:id="@+id/barrier"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorTransparent"
        android:layout_marginBottom="@dimen/dp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/exoBtnLike"/>


    <ImageButton
        android:id="@+id/exoBtnWishlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:src="@drawable/ic_heart"
        app:layout_constraintBottom_toBottomOf="@+id/exoBtnDislike"
        app:layout_constraintEnd_toStartOf="@+id/exoBtnComment"
        app:layout_constraintStart_toEndOf="@+id/exoBtnDislike"
        app:layout_constraintTop_toTopOf="@+id/exoBtnDislike" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wishlist"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/colorTransparent"
        android:layout_margin="@dimen/dp_5"
        app:layout_constraintStart_toEndOf="@+id/exoBtnWishlist"
        app:layout_constraintTop_toTopOf="@+id/exoBtnWishlist"/>


    <ImageButton
        android:id="@+id/exoBtnDislike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:src="@drawable/ic_thumb_down_exo"
        app:layout_constraintBottom_toBottomOf="@+id/exoBtnLike"
        app:layout_constraintEnd_toStartOf="@+id/exoBtnWishlist"
        app:layout_constraintStart_toEndOf="@+id/exoBtnLike"
        app:layout_constraintTop_toTopOf="@+id/exoBtnLike" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dislike"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/colorTransparent"
        android:layout_margin="@dimen/dp_5"
        app:layout_constraintStart_toEndOf="@+id/exoBtnDislike"
        app:layout_constraintTop_toTopOf="@+id/exoBtnDislike"/>

    <ImageButton
        android:id="@+id/exoBtnLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@color/transparent"
        android:src="@drawable/ic_thumb_up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/exoBtnDislike"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/like"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/colorTransparent"
        android:layout_margin="@dimen/dp_5"
        app:layout_constraintStart_toEndOf="@+id/exoBtnLike"
        app:layout_constraintTop_toTopOf="@+id/exoBtnLike"/>

    <ImageButton
        android:id="@+id/exoBtnComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_50"
        android:background="@color/transparent"
        android:src="@drawable/ic_comment"
        app:layout_constraintBottom_toBottomOf="@+id/exoBtnWishlist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/exoBtnWishlist"
        app:layout_constraintTop_toTopOf="@+id/exoBtnWishlist" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/do_you_have_any_questions"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/colorTransparent"
        android:layout_margin="@dimen/dp_5"
        app:layout_constraintStart_toEndOf="@+id/exoBtnComment"
        app:layout_constraintEnd_toEndOf="@+id/exo_duration"
        app:layout_constraintTop_toTopOf="@+id/exoBtnComment"/>

</androidx.constraintlayout.widget.ConstraintLayout>