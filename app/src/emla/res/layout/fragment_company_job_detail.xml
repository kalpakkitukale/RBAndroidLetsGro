<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/customCard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".emla.ui.fragments.CompanyJobDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLabelJobDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextViewLabel"
            android:text="Job Description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvJobDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextViewValeOfLabel"
            android:layout_marginTop="@dimen/text_view_vale_of_label_top"
            app:layout_constraintTop_toBottomOf="@id/tvLabelJobDescription"
            app:layout_constraintStart_toStartOf="@id/tvLabelJobDescription"
            app:layout_constraintEnd_toEndOf="@id/tvLabelJobDescription"
            tools:text="@string/dummyText"/>

        <com.ramanbyte.emla.view.CustomWebView
            android:id="@+id/webViewJobDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/tvJobDescription"
            app:layout_constraintTop_toBottomOf="@+id/tvJobDescription"
            app:layout_constraintEnd_toEndOf="@+id/tvJobDescription"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>