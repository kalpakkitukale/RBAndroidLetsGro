<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardContainer"
        style="@style/customCard"
        android:layout_width="@dimen/dp_118"
        android:layout_height="@dimen/dp_118"
        android:onClick="@{()->jobSkillsViewModel.onSkillClick(cardContainer, skillsModel)}">

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitleSkillPage"
                style="@style/TextViewTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="2"
                android:maxLines="2"
                android:text="@{skillsModel.skillName}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/skill_page_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvJobOpenings"
                style="@style/TextViewSubTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_view_vale_of_label_top"
                android:drawableStart="@drawable/ic_job"
                android:gravity="center"
                android:text='@{skillsModel.totalNumberOfJobs + "  " + @string/jobs}'
                android:textColor="@color/colorButtonTextForFilledButton"
                app:layout_constraintEnd_toEndOf="@+id/tvTitleSkillPage"
                app:layout_constraintStart_toStartOf="@+id/tvTitleSkillPage"
                app:layout_constraintTop_toBottomOf="@+id/tvTitleSkillPage"
                tools:text="50 Jobs" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <data>

        <variable
            name="skillsModel"
            type="com.ramanbyte.emla.models.response.SkillsModel" />

        <variable
            name="viewPosition"
            type="Integer" />

        <variable
            name="jobSkillsViewModel"
            type="com.ramanbyte.emla.view_model.SkillsViewModel" />
    </data>

</layout>