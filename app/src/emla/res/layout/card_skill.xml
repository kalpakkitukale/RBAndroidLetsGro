<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_150"
    android:layout_height="@dimen/dp_120"
    style="@style/customCard"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitleSkillPage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TextViewTitle"
        android:text="@string/skill_page_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvJobOpenings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextViewValeOfLabel"
            android:gravity="center"
            android:layout_marginTop="@dimen/text_view_vale_of_label_top"
            app:layout_constraintEnd_toEndOf="@+id/tvTitleSkillPage"
            app:layout_constraintStart_toStartOf="@+id/tvTitleSkillPage"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleSkillPage"
            tools:text="50 Jobs"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>