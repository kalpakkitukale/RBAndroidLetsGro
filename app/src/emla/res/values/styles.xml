<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textAppearance">@style/AppTheme.Font</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight" >
        <item name="android:textAppearance">@style/AppTheme.Font</item>
        <item name="android:textViewStyle">@style/AppTheme.Font</item>
        <item name="button_style">@style/AppTheme.Font</item>
       <!-- <item name="android:tint">@color/colorStudentIcon</item>
        <item name="colorControlNormal">@color/colorStudentIcon</item>-->
    </style>

    <!-- START Font Style-->
    <style name="AppTheme.Font">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppTheme.Font.Bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppTheme.Font.Medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppTheme.Font.Light">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppTheme.Font.Thin">
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppTheme.Font.Black">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:includeFontPadding">false</item>
    </style>


    <style name="AppTheme.Font.Italic">
        <item name="android:fontFamily">@font/roboto_italic</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--Font End-->

    <style name="TextInputLayoutWithoutBorder" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="hintTextColor">@color/colorTextHint</item>
        <item name="boxStrokeWidth">0.1dp</item>
        <item name="android:textAppearance">@style/AppTheme.Font</item>
        <item name="android:textViewStyle">@style/AppTheme.Font</item>
        <item name="button_style">@style/AppTheme.Font</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="backgroundColor">@color/transparent</item>
    </style>

<!--
    <style name="EditTextStyleIntoTilRegular">
        <item name="android:textViewStyle">@style/AppTheme.Font</item>
        <item name="button_style">@style/AppTheme.Font</item>
        <item name="android:textAppearance">@style/AppTheme.Font</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_14</item>
        &lt;!&ndash;<item name="android:textColor">@color/colorAccent</item>&ndash;&gt;
    </style>
-->

    <style name="EditTextRegularGrayHint">
        <item name="android:textColorHint">@color/colorTextNavyBlueInLightNWhiteInDark</item>
        <item name="android:textAppearance">@style/AppTheme.Font</item>
        <item name="android:textColor">@color/colorTextNavyBlueInLightNWhiteInDark</item>
        <item name="android:drawablePadding">@dimen/dp_5</item>
        <item name="background">@color/colorTransparent</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="hintAnimationEnabled">false</item>
    </style>

    <style name="EditTextHintStyleHintLight">
        <item name="android:textAppearance">@style/AppTheme.Font.Light</item>
        <item name="android:textSize">@dimen/sp_10</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <!--<item name="android:textColor">@color/colorAccent</item>-->
    </style>

    <!--Text view  whenever we use TextView, give proper size -->
    <style name="TextViewRegularNavyBlueOnLightNWhiteOnDark">
    <item name="android:textAppearance">@style/AppTheme.Font</item>
    <item name="android:textColor">@color/colorTextNavyBlueInLightNWhiteInDark</item>
</style>

    <style name="TextViewMediumNavyBlueOnLightNWhiteOnDark">
        <item name="android:textAppearance">@style/AppTheme.Font.Medium</item>
        <item name="android:textColor">@color/colorTextNavyBlueInLightNWhiteInDark</item>
    </style>

    <style name="TextViewLightNavyBlueOnLightNWhiteOnDark">
        <item name="android:textAppearance">@style/AppTheme.Font.Light</item>
        <item name="android:textColor">@color/colorTextNavyBlueInLightNWhiteInDark</item>
    </style>

    <style name="TextViewBoldNavyBlueOnLightNWhiteOnDark">
        <item name="android:textAppearance">@style/AppTheme.Font.Bold</item>
        <item name="android:textColor">@color/colorTextNavyBlueInLightNWhiteInDark</item>
    </style>

    <style name="TextViewItalicNavyBlueOnLightNWhiteOnDark">
        <item name="android:textAppearance">@style/AppTheme.Font.Italic</item>
        <item name="android:textColor">@color/colorTextNavyBlueInLightNWhiteInDark</item>
    </style>

    <!--Use for all kinds of title in entire project-->
    <style name="TextViewMediumNayBlueOnLightNWhiteOnDark14sp">
        <item name="android:textColor">@color/colorTextNavyBlueInLightNWhiteInDark</item>
        <item name="android:textAppearance">@style/AppTheme.Font.Medium</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="TextViewMediumGrayOnLightNDark14sp">
        <item name="android:textColor">@color/colorTextGrayOnLightNDark</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textAppearance">@style/AppTheme.Font.Medium</item>
    </style>

    <style name="TextViewRegularGrayOnLightNDark">
        <item name="android:textAppearance">@style/AppTheme.Font</item>
        <item name="android:textColor">@color/colorTextGrayOnLightNDark</item>
    </style>

    <style name="TextViewMediumGrayOnLightNDark">
        <item name="android:textAppearance">@style/AppTheme.Font.Medium</item>
        <item name="android:textColor">@color/colorTextGrayOnLightNDark</item>
    </style>

    <style name="TextViewLightGrayOnLightNDark">
        <item name="android:textAppearance">@style/AppTheme.Font.Light</item>
        <item name="android:textColor">@color/colorTextGrayOnLightNDark</item>
    </style>

    <style name="TextViewBoldGrayOnLightNDark">
        <item name="android:textAppearance">@style/AppTheme.Font.Bold</item>
        <item name="android:textColor">@color/colorTextGrayOnLightNDark</item>
    </style>

    <style name="TextViewItalicGrayOnLightNDark">
        <item name="android:textAppearance">@style/AppTheme.Font.Italic</item>
        <item name="android:textColor">@color/colorTextGrayOnLightNDark</item>
    </style>

    <style name="CustomCapsuleButtonBlueBgWhiteText">
        <item name="android:background">@drawable/blue_button_capsule</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:minHeight">@null</item>
        <item name="android:paddingTop">@dimen/dp_12</item>
        <item name="android:paddingBottom">@dimen/dp_12</item>
        <item name="android:paddingStart">@dimen/dp_20</item>
        <item name="android:paddingEnd">@dimen/dp_20</item>
        <item name="android:textAppearance">@style/AppTheme.Font</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="FilePickerTheme" parent="LibAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAppearance">@style/AppTheme.Font</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--this style for getting a space between button in alert dialog-->
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- <item name="android:layout_margin">@dimen/dp_5</item>-->
        <item name="android:layout_marginRight">@dimen/dp_5</item>
        <item name="android:layout_marginLeft">@dimen/dp_5</item>
        <item name="android:textAppearance">@style/AppTheme.Font</item>
    </style>

    <!-- styles for image button in media player controls -->
    <style name="exoImageButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_margin">@dimen/dp_3</item>
    </style>

    <style name="exoTextViewStyles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTransparent</item>
    </style>

    <!--Chips style-->
    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_state_background_color</item>
        <item name="android:textColor">@color/chip_state_text_color</item>
        <item name="chipIconSize">@dimen/dp_15</item>
    </style>

    <style name="AppTheme.Drawer" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>



    <style name="customCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/cardBackgroundColor</item>
        <item name="cardCornerRadius">@dimen/dp_5</item>
        <item name="cardElevation">@dimen/dp_2</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">@dimen/dp_5</item>
        <item name="android:layout_margin">@dimen/dp_5</item>
    </style>

</resources>
