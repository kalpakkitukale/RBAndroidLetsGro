<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">

            <stroke
                android:width="4dp"
                android:color="#9970cacd" />

            <gradient
                android:angle="180" android:startColor="#0870cacd"
                android:centerColor="#9970cacd"
                android:endColor="#0870cacd"
                />

            <corners android:radius="5dp" />
        </shape>
    </item>

    <item
        android:bottom="5dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/cardBackgroundColor" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</layer-list>


